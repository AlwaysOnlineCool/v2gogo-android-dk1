<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_custom_dialog_container_layout" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/goods_detais_select_buy_num_tip"
        android:textColor="@color/app_common_black"
        android:textSize="15sp" />

    <View
        style="@style/style_common_horizontal_line"
        android:layout_marginTop="10dip" />

    <TextView
        android:id="@+id/buy_goods_sheet_edit_dialog_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:textColor="@color/action_bar_color"
        android:textSize="15sp" />

    <View
        style="@style/style_common_horizontal_line"
        android:layout_marginTop="10dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >

        <com.v2gogo.project.views.logic.CartSteper
            android:id="@+id/buy_goods_sheet_edit_dialog_cartsteper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:text="@string/select_num_tip"
            android:textColor="@color/app_common_black"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/buy_goods_sheet_edit_dialog_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="15dip"
        android:background="@drawable/selector_common_org_btn_drawable"
        android:gravity="center"
        android:text="@string/profile_info_sure"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

</LinearLayout>