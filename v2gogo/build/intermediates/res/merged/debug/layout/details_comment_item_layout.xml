<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/style_list_item_conntainer_layout"
        android:background="@drawable/selector_top_skin_listview_item_drawable" >

        <TextView
            android:id="@+id/details_comment_item_layout_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/app_common_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/details_comment_item_layout_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/user_icons_forward"
            android:gravity="center_vertical"
            android:text="@string/brower_more_comments_tip"
            android:textColor="#696969"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/style_list_item_conntainer_layout"
        android:background="@drawable/selector_bottom_skin_listview_item_drawable" >

        <ImageView
            android:id="@+id/details_comment_item_layout_avatar"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_toRightOf="@id/details_comment_item_layout_avatar"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/details_comment_item_layout_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/action_bar_color"
                    android:textSize="12sp" />

                <TextView                    android:id="@+id/details_comment_item_layout_like_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="3dip"
                    android:drawableRight="@drawable/commentary_btn_dianzan_selected"
                    android:gravity="center_vertical"
                    android:textColor="@color/action_bar_color"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/details_comment_item_layout_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:textColor="@color/app_common_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/details_comment_item_layout_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:lineSpacingExtra="1dip"
                android:textColor="@color/app_common_black"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>