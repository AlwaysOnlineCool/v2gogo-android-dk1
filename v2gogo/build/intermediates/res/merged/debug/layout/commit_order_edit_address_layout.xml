<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_list_item_conntainer_layout"
    android:background="@drawable/skin_setting_strip_top_unpressed" >

    <LinearLayout
        android:id="@+id/commit_order_edit_layout_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/commit_order_edit_layout_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLength="12"
                android:singleLine="true"
                android:textColor="@color/app_common_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/commit_order_edit_layout_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/app_common_black"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/commit_order_edit_layout_reset_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_common_greyselected_selected"
                android:ellipsize="end"
                android:minHeight="30dip"
                android:minWidth="91dip"
                android:singleLine="true"
                android:text="@string/reset_edit_address_tip_ex"
                android:textColor="@color/action_bar_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/commit_order_edit_layout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:layout_toLeftOf="@id/commit_order_edit_layout_reset_address"
                android:textColor="@color/app_common_black"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/commit_order_edit_layout_empty_reset_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_common_greyselected_selected"
        android:text="@string/reset_edit_address_tip"
        android:textColor="@color/action_bar_color"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>