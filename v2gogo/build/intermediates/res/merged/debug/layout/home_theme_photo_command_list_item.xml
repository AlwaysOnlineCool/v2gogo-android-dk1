<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/skin_setting_strip_top_unpressed"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/home_theme_photo_command_list_item_avatar"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/home_theme_photo_command_list_item_alias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_toRightOf="@id/home_theme_photo_command_list_item_avatar"
        android:textColor="@color/app_common_black"
        android:textSize="14sp" />

</RelativeLayout>