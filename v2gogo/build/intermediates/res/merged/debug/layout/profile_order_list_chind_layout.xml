<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_list_item_conntainer_layout"
    android:background="@drawable/selector_top_skin_listview_item_drawable" >

    <ImageView
        android:id="@+id/profile_order_chind_goods_thumb"
        style="@style/style_list_item_thumb"
        android:contentDescription="@string/app_name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_thumb_width_and_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/profile_order_chind_goods_thumb"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/profile_order_chind_goods_name"
            style="@style/style_list_item_title"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/profile_order_chind_goods_description"
            style="@style/style_list_item_description"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/profile_order_chind_gogo_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/action_bar_color"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>