<?xml version="1.0" encoding="utf-8"?>
<!-- 首页文章推广位布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/fragment_home_artice_more_layout"
        style="@style/style_fragment_home_popularize_name_layout" >

        <ImageView
            android:layout_width="4dip"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/icons_label_orange" />

        <TextView
            android:id="@+id/fragment_home_popularize_artice_name"
            style="@style/style_fragment_home_popularize_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dip" />

        <TextView style="@style/style_fragment_home_popularize_more" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/fragment_home_popularize_artice_one_layout"
            style="@style/style_fragment_home_popularize_artice_container_layout"
            android:background="@drawable/selector_middle_skin_listview_item_drawable" >

            <ImageView
                android:id="@+id/fragment_home_popularize_artice_one_thumb"
                style="@style/style_fragment_home_popularize_artice_thumb"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/fragment_home_popularize_artice_one_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fragment_home_popularize_artice_one_thumb"
                android:layout_alignLeft="@id/fragment_home_popularize_artice_one_thumb"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="6dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/comm_topic_video" />

            <RelativeLayout
                style="@style/style_fragment_home_popularize_artice_content_layout"
                android:layout_toRightOf="@id/fragment_home_popularize_artice_one_thumb" >

                <TextView
                    android:id="@+id/fragment_home_popularize_artice_one_title"
                    style="@style/style_fragment_home_popularize_artice_title"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/fragment_home_popularize_artice_one_desr"
                    style="@style/style_fragment_home_popularize_artice_desription"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/fragment_home_popularize_artice_one_date"
                        style="@style/style_fragment_home_popularize_artice_date"
                        android:layout_width="0dip"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/fragment_home_popularize_artice_one_brower"
                        style="@style/style_fragment_home_popularize_artice_brower"
                        android:drawableLeft="@drawable/scan_icon"
                        android:drawablePadding="2dip" />

                    <TextView
                        android:id="@+id/fragment_home_popularize_artice_one_detail_type"
                        style="@style/style_fragment_home_popularize_artice_detail_type" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_home_popularize_artice_two_layout"
            style="@style/style_fragment_home_popularize_artice_container_layout"
            android:background="@drawable/selector_middle_skin_listview_item_drawable" >

            <ImageView
                android:id="@+id/fragment_home_popularize_artice_two_thumb"
                style="@style/style_fragment_home_popularize_artice_thumb"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/fragment_home_popularize_artice_two_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fragment_home_popularize_artice_two_thumb"
                android:layout_alignLeft="@id/fragment_home_popularize_artice_two_thumb"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="6dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/comm_topic_video" />

            <RelativeLayout
                style="@style/style_fragment_home_popularize_artice_content_layout"
                android:layout_toRightOf="@id/fragment_home_popularize_artice_two_thumb" >

                <TextView
                    android:id="@+id/fragment_home_popularize_artice_two_title"
                    style="@style/style_fragment_home_popularize_artice_title"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/fragment_home_popularize_artice_two_desr"
                    style="@style/style_fragment_home_popularize_artice_desription"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/fragment_home_popularize_artice_two_date"
                        style="@style/style_fragment_home_popularize_artice_date"
                        android:layout_width="0dip"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/fragment_home_popularize_artice_two_brower"
                        style="@style/style_fragment_home_popularize_artice_brower"
                        android:drawableLeft="@drawable/scan_icon"
                        android:drawablePadding="2dip" />

                    <TextView
                        android:id="@+id/fragment_home_popularize_artice_two_detail_type"
                        style="@style/style_fragment_home_popularize_artice_detail_type" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_home_popularize_artice_three_layout"
            style="@style/style_fragment_home_popularize_artice_container_layout"
            android:background="@drawable/selector_bottom_skin_listview_item_drawable" >

            <ImageView
                android:id="@+id/fragment_home_popularize_artice_three_thumb"
                style="@style/style_fragment_home_popularize_artice_thumb"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/fragment_home_popularize_artice_three_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fragment_home_popularize_artice_three_thumb"
                android:layout_alignLeft="@id/fragment_home_popularize_artice_three_thumb"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="6dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/comm_topic_video" />

            <RelativeLayout
                style="@style/style_fragment_home_popularize_artice_content_layout"
                android:layout_toRightOf="@id/fragment_home_popularize_artice_three_thumb" >

                <TextView
                    android:id="@+id/fragment_home_popularize_artice_three_title"
                    style="@style/style_fragment_home_popularize_artice_title"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/fragment_home_popularize_artice_three_desr"
                    style="@style/style_fragment_home_popularize_artice_desription"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/fragment_home_popularize_artice_three_date"
                        style="@style/style_fragment_home_popularize_artice_date"
                        android:layout_width="0dip"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/fragment_home_popularize_artice_three_brower"
                        style="@style/style_fragment_home_popularize_artice_brower"
                        android:drawableLeft="@drawable/scan_icon"
                        android:drawablePadding="2dip" />

                    <TextView
                        android:id="@+id/fragment_home_popularize_artice_three_detail_type"
                        style="@style/style_fragment_home_popularize_artice_detail_type" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>