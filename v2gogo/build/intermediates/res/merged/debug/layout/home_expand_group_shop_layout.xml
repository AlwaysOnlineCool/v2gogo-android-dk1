<?xml version="1.0" encoding="utf-8"?>
<!-- 首页团购推广位布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fadingEdge="none"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fragment_home_popularize_shop_first_image"
            style="@style/style_fragment_home_popularize_horizontal_goods_thumb"
            android:contentDescription="@string/app_name"
            android:cropToPadding="true"
            android:paddingRight="0.2dip" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/fragment_home_popularize_shop_second_image"
                style="@style/style_fragment_home_popularize_vertical_goods_thumb"
                android:contentDescription="@string/app_name"
                android:cropToPadding="true"
                android:paddingBottom="0.2dip"
                android:paddingLeft="0.2dip" />

            <ImageView
                android:id="@+id/fragment_home_popularize_shop_three_image"
                style="@style/style_fragment_home_popularize_vertical_goods_thumb"
                android:contentDescription="@string/app_name"
                android:cropToPadding="true"
                android:paddingLeft="0.2dip"
                android:paddingTop="0.2dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>