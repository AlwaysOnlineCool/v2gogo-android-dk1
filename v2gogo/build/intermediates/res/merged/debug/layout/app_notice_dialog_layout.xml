<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_concern_rectage_dialog_drawable"
    android:orientation="vertical"
    android:paddingTop="22dip" >

    <TextView
        android:id="@+id/app_notice_dialog_layout_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="14dip"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3dip"
        android:textColor="@color/app_common_black"
        android:textSize="16sp" />

    <View
        style="@style/style_common_horizontal_line"
        android:layout_height="1dip"
        android:layout_marginTop="22dip" />

    <Button
        android:id="@+id/app_notice_dialog_layout_sure"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@null"
        android:textColor="@color/app_common_black"
        android:textSize="18sp" />

</LinearLayout>