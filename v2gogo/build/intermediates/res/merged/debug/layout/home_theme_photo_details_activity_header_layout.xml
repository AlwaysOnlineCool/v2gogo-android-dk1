<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/home_theme_photo_details_header_user_avatar"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@id/home_theme_photo_details_header_user_avatar" >

            <TextView
                android:id="@+id/home_theme_photo_details_header_fullname"
                style="@style/style_fragment_home_popularize_artice_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="false" />

            <TextView
                android:id="@+id/home_theme_photo_details_header_sn"
                style="@style/style_fragment_home_popularize_artice_date"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="4dip" />

            <TextView
                android:id="@+id/home_theme_photo_details_header_upload_time"
                style="@style/style_fragment_home_popularize_artice_date"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dip"
                android:gravity="right" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/home_theme_photo_details_header_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/home_theme_photo_details_header_photo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textColor="#696969"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/home_theme_photo_details_header_photo_command"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dip"
        android:background="@null"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/home_theme_photo_details_header_command_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#696969"
        android:textSize="12sp" />

    <com.v2gogo.project.views.logic.ThemePhotoAvatarLayout
        android:id="@+id/home_theme_photo_details_header_avatar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip" />

</LinearLayout>