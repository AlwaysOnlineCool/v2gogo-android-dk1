<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout style="@style/style_common_action_bar" >

        <ImageButton
            style="@style/style_common_action_back"
            android:contentDescription="@string/app_name" />

        <TextView
            style="@style/style_common_action_bar_title"
            android:text="@string/profile_setting_about_us" />
    </RelativeLayout>

    <com.v2gogo.project.views.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/about_us_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dip"
                android:textColor="#696969"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginTop="30dip"
                android:background="@drawable/common_ui_popup_titleline" />

            <TextView
                android:id="@+id/about_us_service_product_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_profile_item_height"
                android:background="@drawable/selector_top_skin_listview_item_drawable"
                android:drawableRight="@drawable/user_icons_forward"
                android:gravity="center_vertical"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="@string/about_product_tip"
                android:textColor="@color/app_common_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/about_us_service_phone_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_profile_item_height"
                android:background="@drawable/selector_top_skin_listview_item_drawable"
                android:drawableRight="@drawable/user_icons_forward"
                android:gravity="center_vertical"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="@string/about_service_phone_tip"
                android:textColor="@color/app_common_black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="170dip"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="1.4"
                android:text="@string/about_coryright_tip"
                android:textColor="@color/app_common_gray"
                android:textSize="15sp" />
        </LinearLayout>
    </com.v2gogo.project.views.scrollview.ReboundScrollView>

</LinearLayout>