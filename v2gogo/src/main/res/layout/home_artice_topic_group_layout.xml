<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/skin_setting_strip_top_unpressed"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/artice_deatils_more_layout"
        style="@style/style_list_item_conntainer_layout"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_artice_topic_group_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/app_common_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/home_artice_topic_group_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="3dip"
            android:drawableRight="@drawable/user_icons_forward"
            android:text="@string/brower_more_comments_tip"
            android:textColor="@color/app_common_black" />
    </RelativeLayout>

    <View style="@style/style_common_horizontal_line" />

    <RelativeLayout
        style="@style/style_list_item_conntainer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/home_artice_topic_group_user_avatar"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/home_artice_topic_group_user_avatar"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/home_artice_topic_group_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textColor="@color/action_bar_color"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/home_artice_topic_group_command_layout"
                    android:layout_width="50dip"
                    android:layout_height="22dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/shape_command_bg_drawable"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/home_artice_topic_group_support_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dip"
                        android:paddingTop="4dip"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/home_artice_topic_group_is_praised"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/home_artice_topic_group_support_num"
                        android:background="@null"
                        android:focusable="false"
                        android:textIsSelectable="false" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/home_artice_topic_group_create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:textColor="@color/app_common_gray"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>