<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout style="@style/style_common_action_bar" >

        <ImageButton
            style="@style/style_common_action_back"
            android:contentDescription="@string/app_name" />

        <TextView
            style="@style/style_common_action_bar_title"
            android:text="@string/please_upload_theme_photo_tip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/skin_setting_strip_bottom_pressed"
        android:orientation="horizontal"
        android:padding="10dip" >

        <EditText
            android:id="@+id/home_theme_photo_post_edit_content"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="说点什么吧（100字内）"
            android:inputType="textMultiLine"
            android:maxLength="100" />

        <ImageView
            android:id="@+id/home_theme_photo_post_upload_image"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/upload_pic_watch_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="0/100"
        android:textColor="@color/action_bar_color"
        android:textSize="15sp" />

    <Button
        android:id="@+id/home_theme_photo_post_upload_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/selector_common_org_btn_drawable"
        android:text="@string/please_upload_theme_photo_tip"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

</LinearLayout>