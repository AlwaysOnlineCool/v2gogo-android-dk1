<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout style="@style/style_common_action_bar" >

        <ImageButton
            style="@style/style_common_action_back"
            android:contentDescription="@string/app_name" />

        <TextView
            style="@style/style_common_action_bar_title"
            android:text="@string/home_v2gogo_interaction_comment" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.v2gogo.project.views.edittext.LimitedEditText
            android:id="@+id/comment_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="140dip" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_comment_photo_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:text="@string/upload_photo_tip"
            android:textColor="@color/app_common_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/home_comment_photo_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/selector_add_btn_picture_drawable" />
    </LinearLayout>

    <Button
        android:id="@+id/home_comment_publish_btn"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/selector_common_org_btn_drawable"
        android:text="@string/publish_confirm_publish"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>