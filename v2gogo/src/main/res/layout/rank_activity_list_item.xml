<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_list_item_conntainer_layout"
    android:background="@drawable/selector_top_skin_listview_item_drawable"
    android:orientation="vertical"
    android:paddingRight="0dip" >

    <LinearLayout
        android:id="@+id/rank_rank_layout"
        android:layout_width="33dip"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/rank_activity_list_item_rank"
            style="@style/style_list_item_title"
            android:layout_width="25dip"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="17sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/rank_activity_list_item_avatar"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dip"
        android:layout_toRightOf="@id/rank_rank_layout"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/rank_activity_list_item_username"
        style="@style/style_list_item_title"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@id/rank_activity_list_item_avatar"
        android:gravity="center_horizontal"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/rank_activity_list_item_coin"
        style="@style/style_list_item_title"
        android:layout_width="60dip"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:textColor="@color/action_bar_color"
        android:textSize="17sp" />

</RelativeLayout>