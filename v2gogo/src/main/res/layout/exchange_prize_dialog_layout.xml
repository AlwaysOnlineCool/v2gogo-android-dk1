<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_concern_rectage_dialog_drawable"
    android:orientation="vertical"
    android:paddingTop="22dip" >

    <TextView
        android:id="@+id/exchange_prize_message_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="14dip"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3dip"
        android:textColor="@color/app_common_black"
        android:textSize="16sp" />

    <View
        style="@style/style_common_horizontal_line"
        android:layout_height="1dip"
        android:layout_marginTop="22dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/exchange_prize_left_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/delete_prize_sure_tip"
            android:textColor="@color/app_common_black"
            android:textSize="16sp" />

        <View
            style="@style/style_common_vertical_line"
            android:layout_width="1dip" />

        <Button
            android:id="@+id/exchange_prize_right_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/delete_prize_cancel_tip"
            android:textColor="@color/app_common_black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>