<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_list_item_conntainer_layout"
    android:background="@drawable/selector_top_skin_listview_item_drawable"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/order_confirm_goods_list_item_thumb"
        style="@style/style_list_item_thumb"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/order_confirm_goods_list_item_num"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_thumb_width_and_height"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:textColor="@color/app_common_black"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_thumb_width_and_height"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/order_confirm_goods_list_item_num"
        android:layout_toRightOf="@id/order_confirm_goods_list_item_thumb" >

        <TextView
            android:id="@+id/order_confirm_goods_list_item_name"
            style="@style/style_list_item_title"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="10dip" />

        <TextView
            android:id="@+id/order_confirm_goods_list_item_intro"
            style="@style/style_list_item_description"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip" />
    </RelativeLayout>

</RelativeLayout>