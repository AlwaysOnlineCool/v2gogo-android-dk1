<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_concern_rectage_dialog_drawable"
    android:orientation="vertical"
    android:paddingBottom="35dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    android:paddingTop="25dip" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3dip"
        android:text="@string/newest_apk_downloading_tip"
        android:textColor="@color/app_common_black"
        android:textSize="15sp" />

    <View
        style="@style/style_common_horizontal_line"
        android:layout_height="1dip"
        android:layout_marginTop="10dip" />

    <com.v2gogo.project.views.progressbar.NumberProgressBar
        android:id="@+id/apk_download_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="25dip" />

</LinearLayout>