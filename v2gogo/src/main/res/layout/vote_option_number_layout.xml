<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dip" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/real_interaction_person_actions"
        android:textColor="@color/app_common_black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/vote_number_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/vote_number_text1"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:background="@drawable/shape_vote_number_bg"
            android:gravity="center"
            android:textColor="#696969"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/vote_number_text2"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_marginLeft="8dip"
            android:background="@drawable/shape_vote_number_bg"
            android:gravity="center"
            android:textColor="#696969"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/vote_number_text3"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_marginLeft="8dip"
            android:background="@drawable/shape_vote_number_bg"
            android:gravity="center"
            android:textColor="#696969"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/vote_number_text4"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_marginLeft="8dip"
            android:background="@drawable/shape_vote_number_bg"
            android:gravity="center"
            android:textColor="#696969"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/vote_number_text5"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_marginLeft="8dip"
            android:background="@drawable/shape_vote_number_bg"
            android:gravity="center"
            android:textColor="#696969"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/vote_number_text6"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_marginLeft="8dip"
            android:background="@drawable/shape_vote_number_bg"
            android:gravity="center"
            android:textColor="#696969"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>