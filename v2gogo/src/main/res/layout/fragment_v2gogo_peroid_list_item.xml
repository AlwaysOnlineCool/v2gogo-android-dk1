<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_list_item_conntainer_layout"
    android:background="@drawable/selector_middle_skin_listview_item_drawable"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/fragment_v2gogo_period_vedio_publish_avatar"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/v2gogo_avatar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/fragment_v2gogo_period_vedio_publish_avatar" >

            <TextView
                android:id="@+id/fragment_v2gogo_period_vedio_title"
                style="@style/style_list_item_title"
                android:layout_centerVertical="false"
                android:textColor="@color/app_common_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_v2gogo_period_vedio_sub_title"
                style="@style/style_list_item_description"
                android:layout_below="@id/fragment_v2gogo_period_vedio_title"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#696969"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/fragment_v2gogo_period_vedio_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip" >

        <TextView
            android:id="@+id/fragment_v2gogo_period_vedio_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/app_common_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fragment_v2gogo_period_vedio_duarion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@id/fragment_v2gogo_period_vedio_publish_time"
            android:drawableLeft="@drawable/icons_list_time"
            android:drawablePadding="3dip"
            android:gravity="center_vertical"
            android:textColor="@color/app_common_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fragment_v2gogo_period_vedio_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:drawableLeft="@drawable/icons_list_commentary"
            android:drawablePadding="3dip"
            android:gravity="center_vertical"
            android:textColor="@color/app_common_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fragment_v2gogo_period_vedio_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:layout_toLeftOf="@id/fragment_v2gogo_period_vedio_comment"
            android:drawableLeft="@drawable/icons_list_dianzan"
            android:drawablePadding="3dip"
            android:gravity="center_vertical"
            android:textColor="@color/app_common_gray"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>