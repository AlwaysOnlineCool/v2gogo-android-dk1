<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/common_edittext_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_top_skin_listview_item_drawable"
        android:gravity="top"
        android:hint="@string/publish_comment_tip"
        android:inputType="none"
        android:minHeight="140dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:maxLength="100"
        android:lineSpacingMultiplier="1.3"
        android:paddingTop="4dip"
        android:textColor="#696969"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/common_edittext_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/common_left_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/action_bar_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/common_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/action_bar_color"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>